<div class="block pb-3">
  <div class="has-text-centered">
    <h2 class="title is-2">Welcome, {{name}}!</h2>
  </div>
</div>

<div class="columns">
  <div class="column">
    <h3 class="title is-3">Create a New Blog Post:</h3>

    <form class="form new-blog-form">
      <div class="field">
        <label class="label" for="blog-title">Blog Title:</label>
        <input class="input" type="text" id="blog-title" name="blog-title" placeholder="Blog Title Input" />
      </div>
      <div class="field">
        <label class="label" for="blog-content">Blog Contents:</label>
        <textarea class="textarea" id="blog-content" name="blog-content" placeholder="Type your post here!"></textarea>
      </div>
      <div class="field">
        <button type="submit" class="button is-primary">POST</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="column blog-list">
    <h3 class="title is-3">Current Blog Posts:</h3>

    {{#each blogs as |blog|}}
    <div class="card mb-5">
      <div class="card-content columns">
        <div class="column">
          <a class="title is-3" href="/blog/{{blog.id}}">{{blog.title}}</a>
        </div>
        <div class="column is-one-fifth">
          <button class="button is-danger " data-id="{{blog.id}}">DELETE</button>
        </div>
        
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/blog.js"></script>