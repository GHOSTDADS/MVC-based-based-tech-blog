<div class="container">
  <div class="card mb-4 project" style="background-color: rgba(0, 0, 0, 0.2)">
    <header class="card-header">
      <div class="card-header-icon">
        <span class="icon">
          <p>{{{get_emoji}}}</p>
        </span>
      </div>
      <h2 class="media-content py-2">
        <p class="title is-4" >{{title}}</p>
        <p class="subtitle is-7">Created by {{user.name}} on {{ format_date date_created }}</p>
      </h2>
    </header>

    <div class="card-content has-text-centered">
      <p class="content is-medium">
        {{content}}
      </p>
    </div>
    <button class="button is-warning" id="editBtn">Edit</button>
  </div>

  <div class="text-center">
  {{#each comments as |comment| }}
    <div class="card mb-4 project" style="background-color: rgba(0, 0, 0, 0.2)">
      <header class="card-header">
      <h2 class="media-content has-text-centered py-2">
        <p class="title is-4" >{{comment.content}}</p>
      </h2>
      </header>
        <p class="has-text-centered subtitle is-7">Created by {{comment.user.name}} on {{ format_date comment.date_created }}</p>

    </div>
  {{/each}}
  </div>

</div>

<div class="row">
  <div class="has-text-centered mx-auto">

    <form class="form" id="comment-form">
      <div class="field">
        <label class="label" for="comment"><strong>COMMENT!</strong></label>
        <textarea class="textarea" id="comment" name="comment" rows="2" placeholder="Type your comment here!"></textarea>
      </div>
      <div class="field">
        <button type="submit" class="button is-dark">Submit</button>
      </div>
    </form>

  </div>
</div>

<script src="/js/newComment.js"></script>
<script src="/js/editBlogButton.js"></script>