      <label class="label is-large">Sign Up</label>
      <input class="input" type="text" placeholder="Name" id="username-signup">
    </div>
    <div class="field">
      <input class="input" type="email" placeholder="Email" id="email-signup">
    </div>
    <div class="field">
      <input class="input" type="password" placeholder="Password" id="password-signup">
    </div>
