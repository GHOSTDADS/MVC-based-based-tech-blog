
<div class="columns">

  <div class="column is-one-third">
    <div class="field">
        <label class="label is-large">Log In</label>
      <div class="control">
      <input class="input" type="email" placeholder="Email" id="email-login">
      </div>
    </div>
    <div class="field">
      <div class="control">
      <input class="input" type="password" placeholder="Password" id="password-login">
      </div>
    </div>
    <div class="field">
      <p class="control">
        <button class="button is-success" id="login-form">Login</button>
      </p>
