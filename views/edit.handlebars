<div class="container">
  <div class="row">
    <div class="has-text-centered mx-auto">
        <h2 class="title is-2">Edit your post!</h2>
      <form class="createBlog" id="submitEdit">
        <div class="field mx-auto" style="width: 25%;">
          <label class="label title is-4" for="title">Title</label>
          <input
            class="input has-text-centered"
            id="titleInput"
            maxlength="50"
            value="{{title}}"
          />
        </div>

        <div class="field mx-auto" style="width: 50%;">
          <label class="label title is-4" for="body">Body</label>
          <textarea
            name="bodyInput"
            class="textarea has-text-centered"
            id="bodyInput"
            rows="10"
          >{{content}}</textarea>
        </div>

        <div class="field">
          <button
            type="submit"
            class="mt-3 button is-dark"
          >Submit</button>
        </div>
      </form>

    </div>
  </div>
</div>

<script src="/js/editBlogPost.js"></script>