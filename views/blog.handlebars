<div class="card mb-4 project" style="background-color: rgba(0, 0, 0, 0.2)">
  <header class="card-header">
    <div class="card-header-icon">
      <span class="icon">
        <p>{{{get_emoji}}}</p>
      </span>
    </div>
    <h2 class="media-content py-2">
      <p class="title is-4" >{{title}}</p>
      <p class="subtitle is-7">Created by {{user.name}} on {{ format_date date_created}}</p>
    </h2>
  </header>

  <div class="card-content has-text-centered">
    <p class="content is-medium">
      {{content}}
    </p>
  </div>
</div>